<script>
    $('button').click(async () => {
        const rol = $('#rol').val()
        const payload = {
            rol
        }

        try {
            await axios.post('/rols', payload)
            alert("Usuario registrado con exito")

            window.location.href = "/rol"
        } catch ({response}) {
            const {data} = response
            const {error} = data
            alert(error)
        }
    })
</script>
